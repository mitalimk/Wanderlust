<% layout("layouts/boilerplate") %>


<!-- Listing Title -->
<div class="row mb-4">
  <div class="col-md-8 offset-md-3">
   <br> <h3 class="listing-title"><%= listing.title %></h3>
  </div>
</div>

<!-- Listing Details -->
<div class="row justify-content-center">
  <div class="card col-md-6 listing-card mb-4">
    <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="...">
    <div class="card-body">
      <p class="card-text"><b>Owned by</b> <i><%= listing.owner.username %></i></p> 
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text"><b>Price: </b>&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</p> 
      <p class="card-text"><b>Location: </b><%= listing.location %></p>
      <p class="card-text"><b>Country: </b><%= listing.country %></p>
    </div>

    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="btns d-flex mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-5">Edit</a>
        <form method="post" action="/listings/<%= listing._id %>?_method=delete">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    <% } %>
  </div>
</div>

<!-- Leave a Review -->
<% if (currUser) { %>
<div class="row justify-content-center mb-4">
  <div class="col-md-8">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
      </div> -->
      <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>

      <fieldset class="starability-growRotate">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      </div>
      
      <div class="mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="20" rows="4" class="form-control"></textarea>
        <div class="invalid-feedback">Please add some comment for reviews.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>
<% } %>

<!-- All Reviews -->
<div class="row justify-content-center">
  <div class="col-md-7">
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row g-3">
      <% for (review of listing.reviews) { %>
        <div class="col-md-5">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="starability-result small-stars" data-rating=<%= review.rating %>>
              </p>
              <p class="card-text"><%= review.comment %></p>
             
            </div>
            <form class="mb-3 px-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
         
        </div>
      <% } %>
    </div>
    <br><br>
  </div>
<!-- ........Map section....... -->
<!-- <p>Coordinates for: <%= listing.geometry.coordinates %></p> -->
<h3 class="offset-5">Where you'll be </h3>
<div id="map-container">
  <div id="map" data-coordinates="<%= JSON.stringify(listing.geometry.coordinates) %>"></div>
</div>

</div>
 
